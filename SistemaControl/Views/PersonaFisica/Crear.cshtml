                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit"  id="CrearBoton"value="Crear Persona" class="btn btn-default" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>



